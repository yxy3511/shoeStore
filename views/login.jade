block content
    .container.demo-1
      .content
        #large-header.large-header
          canvas#demo-canvas
          |                     
          .logo_box
            h3 欢迎你
            |                       
            form(id='loginForm', action="/logging", name="loginForm", method="post")
              .input_outer
                span.u_user
                |                               
                input.uname.text( name="uname",id='uname', style="color: #FFFFFF !important", type="text",autofocus placeholder="请输入账户")
